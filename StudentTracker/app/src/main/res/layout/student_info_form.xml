            android:gravity="center"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/EntrepriseAdressForm"
            app:layout_constraintEnd_toEndOf="parent"
